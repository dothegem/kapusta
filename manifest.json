{
  "manifest_version": 3,
  "name": "CAPUSTA",
  "version": "2.2.0",
  "description": "Калькулятор охраны с автопарсингом и CRM для тендеров",
  "web_accessible_resources": [
    {
      "resources": ["src/calcspec.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://zakupki.kontur.ru/*",
    "https://bidzaar.com/*"
  ],
  // DISABLED TEMPORARILY: Background worker was causing "Registration failed: Status code 15"
  // because chrome.alarms is undefined without "alarms" permission.
  // We don't need background polling yet. Will restore when implementing auto-check.
  // "background": {
  //   "service_worker": "src/background.js"
  // },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": "src/icon.png"
  },
  "icons": {
    "128": "src/icon.png"
  }
}
